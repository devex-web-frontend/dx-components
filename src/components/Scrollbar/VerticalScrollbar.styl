@require '~config';

@require '../Scrollable/Scrollable.config.styl';
@require './Scrollbar.styl';

.container {
	top: 0;
	right: 0;
	bottom: 0;
	padding: 0;
	width: $scrollableScrollBarSize;
}

.track {
	width: 100%;
	height: 100%;
}

.bar {
	min-height: $scrollableMinBarSize;
}

.containerIsVisible {

	visibility: inherit;
	z-index: auto;

	&:global(.withBothScrollabars) {
		bottom: $scrollableScrollBarSize;
		&:after {
			content: '';
			position: absolute;
			bottom: -($scrollableScrollBarSize);
			width: $scrollableScrollBarSize;
			height: @width;
			background-color: inherit;
		}
	}
}