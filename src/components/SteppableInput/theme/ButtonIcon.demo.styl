.container {
	box-sizing: border-box;
	width: 17px;
	height: @width;
	text-align: center;
	padding: 0;
	border-width: 1px;
	border-style: solid;
	border-color: rgba(#fff, .08) rgba(#fff, .06) rgba(#fff, .04) rgba(#fff, .06);
	background-color: #4a4540;
	color: #fff;
	box-shadow: none;
	margin: 2px;
	margin-left: 0;
	
	&:hover {
		background-color: #635e58;
		border-color: rgba(#fff, .08) rgba(#fff, .06) rgba(#fff, .04) rgba(#fff, .06);
		box-shadow: none;
	}
	
	&:active {
		background-color: #423d3a;
		border-color: rgba(#000, .1) rgba(#000, .14) rgba(#000, .18) rgba(#000, .14);
		box-shadow: none;
	}
	&[disabled] {
		background-color: silver;
	}
}
	
.icon {
	width: 7px;
	height: @width;
	margin: 0 auto;
}