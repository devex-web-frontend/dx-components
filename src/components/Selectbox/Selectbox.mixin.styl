Selectbox($selector, $caretSize = 0, $caretMarginLeft = 0, $selectedIconSize = 0, $selectedIconMarginLeft = 0) {

	.{$selector} {
		if $caretSize and $caretMarginLeft {
			&__anchor {
				&__content {
					&_hasCaret {
						padding-right: unquote('calc(' + $caretSize + ' + ' + $caretMarginLeft + ')');
						.{$selector}__anchor__caret {
							width: $caretSize;
							height: $caretSize;
						}
					}
				}
			}
		}

		if $selectedIconSize and $selectedIconMarginLeft {
			&__menu_hasSelectedItem {
				.{$selector}__item {
					padding-right: unquote('calc(' + $selectedIconSize + ' + ' + $selectedIconMarginLeft + ')');
					&__activeIcon {
						width: $selectedIconSize;
						height: $selectedIconSize;
					}
				}
			}
		}
	}
}