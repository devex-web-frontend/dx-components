.container {
	background: #000;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;

	&__label {
		display: inline-block;
		padding: 20px;
		color: #fff;
		&:hover {
			color: gold;
			.container__view {
				background-color: lighten(#202020, 5);
				border-color: gold;
			}
			 .container__checkboxIcon {
				color: gold;
			}
		}
	}
	&__disabled {
		color: #CCC;
		.container__view {
			background-color: darken(#202020, 5);
			border-color: darken(#3B3B3B, 5);
		}

		&:hover {
			color: #CCC;
			.container__view {
				background-color: darken(#202020, 5);
				border-color: darken(#3B3B3B, 5);
				color: #CCC;
			}
			.container__checkboxIcon {
				color: #CCC;
			}
		}
	}
}