@require "./Calendar.styl";

.container {
	font-size: 12px;
	color: #fff;
	background-color: #3d3b39;
}

.header {
	border-bottom: 1px solid rgba(255, 255, 255, 0.15);
	padding: 10px 0;
	font-weight: bold;
	margin: 0 5px;

	&__text {
		margin: 0 14px;
	}
}

.changeMonth {
	&__container {
		border: none;
		box-shadow: none;
		vertical-align: top;
		fill: #6cb5d9;
		height: 12px;

		&:hover {
			fill: #dbaf67;
		}
	}

	&__icon {
		height: 12px;
		width: 12px;
	}
}

.month {
	padding-bottom: 5px;
}

.monthHeader {
	margin: 6px 0 12px;

	&__day {
		font-size: 10px;
		line-height: 8px;
		color: darken(#fff, 30);
		text-transform: uppercase;
		font-weight: bold;
	}
}

.week {
}

.day {
	line-height: 8px;
	padding: 5px;
	user-select: none;
	color: #fff;

	&_selected {
		box-shadow: inset 0 0 0 1px #d0a662;
		background: #8a724a;

		&.day_current {
			color: #fff;
		}
	}

	&_current {
		color: #885a32;
	}

	&_disabled {
		color: #7c7b7b;
	}
}