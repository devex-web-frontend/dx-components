@require "./Calendar.styl";

.container {
	font-size: 10px;
	padding: 0 5px 5px;
}

.header {
	border-bottom: 1px solid gray;
	padding: 10px 0;
	font-size: 12px;
	font-weight: bold;
	user-select: none;

	&__text {
		margin: 0 4px;
	}
}

.changeMonth {
	&__container {
		background: transparent;
		border: none;
		box-shadow: none;
		vertical-align: top;
		height: 12px;
	}

	&__icon {
		height: 12px;
		width: 12px;
	}
}