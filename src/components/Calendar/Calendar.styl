.container {
	padding: 0;
}

.header {
	user-select: none;
	text-align: center;
	vertical-align: middle;

	&__text {
		cursor: default;
	}
}

.changeMonth {
	&__container {
		background: transparent;
	}

	&__icon {
		fill: inherit;
	}
}

.month {
}

.monthHeader {
	&__day {
		display: inline-block;
		text-align: center;
		vertical-align: middle;
		box-sizing: border-box;
		margin: 0 10px 0;
		width: 25px;
		user-select: none;
		cursor: default;
	}
}

.week {
	width: 100%;
}

.day {
	box-sizing: border-box;
	display: inline-block;
	text-align: center;
	vertical-align: middle;
	cursor: pointer;
	margin: 0 10px 2px;
	width: 25px;
	user-select: none;

	&_selected {
	}

	&_current {
	}

	&_disabled {
		cursor: default;
	}
}