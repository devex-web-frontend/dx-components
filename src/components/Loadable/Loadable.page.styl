.section {
	color: #000;
	width: 200px;
	height: 300px;
	position: relative;
}

.container {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	background: #000;
	overflow: auto;
	color: #fff;
	font-size: 12px;
	box-sizing: border-box;
	padding: 20px;
}
	

@keyframes sk-rotateplane {
	0% {
		transform: perspective(120px) rotateX(0deg) rotateY(0deg);
	}
	50% {
		transform: perspective(120px) rotateX(-180.1deg) rotateY(0deg);
	}
	100% {
		transform: perspective(120px) rotateX(-180deg) rotateY(-179.9deg);
	}
}


:global {

	.demoLoader {
		width: 40px;
		height: 40px;
		margin: 100px auto;
		background-color: #fff;
		:local {
			animation: sk-rotateplane 1.2s infinite ease-in-out;
		}
		position: absolute;
		top: 50%;
		left: 50%;
		margin-left: -20px;
		margin-top: -20px;
	}
}