.container {
	user-select: none;
	display: inline-block;
	vertical-align: middle;
	position: relative;
	box-sizing: border-box;
	font-size: inherit; //override default user-agent stylesheet
	font-family: inherit; //override default user-agent stylesheet
	outline: none;
	cursor: pointer;
			
	//types
	&_primary {
		composes: container;
	}
		
	&_flat {
		composes: container;
		background-color: transparent;
		border: none;
		box-shadow: none;
	}
		
	//status
	&_isLoading {
		&.container_flat {
			background-color: inherit;
		}
	}
		
	&[disabled] {
		cursor: default;
	}
}
	
.loadingIndicator {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-color: inherit;
	display: flex;
	justify-content: center;
	align-items: center;
}