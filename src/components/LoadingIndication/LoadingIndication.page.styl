.section {
	color: #000;
	width: 200px;
	height: 300px;
	position: relative;
	background-color: inherit;
}

.container {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	background: #000;
	overflow: auto;
	color: #fff;
	font-size: 12px;
	box-sizing: border-box;
	padding: 20px;
}
	
.loadingIndicator {
	width: 40px;
	height: 40px;
	margin: 100px auto;
	background-color: #fff;
	position: absolute;
	top: 50%;
	left: 50%;
	margin-left: -20px;
	margin-top: -20px;
}
