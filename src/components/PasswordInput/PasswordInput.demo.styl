@require './PasswordInput.styl';

.container {
	display: block;
	position: relative;
	width: 300px;
	margin-bottom: 30px;
}

.input {
	padding-right: 29px;
	width: 100%;
	height: 30px;
	font-size: 12px;
}

.button {
	background: none;
	position: absolute;
	right: 0;
	padding: 0 5px;
	top: 0;
	bottom: 0;
	border: 0;
}

.icon {
	fill: #fff;
}